---
const posts = await Astro.glob("../../content/posts/**/*.md");
import Navbar from "../../components/Navbar.astro";
import Page from "../../layouts/Page.astro";

const tags = Array.from(
	new Set(posts.map((post) => post.frontmatter.kw).flat())
);

const TAG_COLORS = {};
---

<Page
	desc="Theodore Kakagis' Blog"
	img="images/profile.jpg"
	kw="programming,gaming,blog"
	title="Tags"
	url="tags"
>
	<Navbar />
	<h1 class="text-center font-bold text-7xl mb-4 mt-4">Tags</h1>
	<main class="max-w-[550px] ml-auto mr-auto flex flex-wrap">
		{
			tags.map((tag) => (
				<a
					href={`/tags/${tag}`}
					class={`m-1 p-1.5 rounded-md ${
						tag in TAG_COLORS
							? (TAG_COLORS as { [x: string]: any })[tag]
							: "bg-zinc-700 hover:bg-zinc-600"
					}`}
				>
					#{tag}
				</a>
			))
		}
	</main>
</Page>
